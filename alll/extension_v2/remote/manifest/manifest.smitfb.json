{
  "manifest_version": 3,
  "name": "Facebook Ads Check",
  "version": "3.6.3",
  "description": "Facebook Ads Check",
  "version_name": "Version 3.6.3",
  "action": {
    "default_title": "Facebook Ads Check by SMIT",
    "default_icon": {
      "19": "assets/images/16.png",
      "38": "assets/images/48.png"
    }
  },
  "icons": {
    "16": "assets/images/16.png",
    "48": "assets/images/48.png",
    "128": "assets/images/128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [ "tabs", "storage", "declarativeNetRequest" ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "externally_connectable": {
    "matches": [
      "http://*/*",
      "https://*/*"
    ]
  },
  "content_scripts": [
    {
      "js": [
        "content-script.js"
      ],
      "css": [
        "static/css/content-script.css"
      ],
      "matches": [
        "https://adsmanager.facebook.com/adsmanager/*",
        "https://business.facebook.com/billing_hub/payment_settings/*"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "resources": [
        "content-script.js"
      ]
    },
    {
      "resources": [
        "content-script.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ]
}